    <div class="chat-create">
        <div class="user-box">
            <%= link_to current_user.name, edit_user_path(current_user) %>
        </div>
        <div class="create-box">
            <%= link_to 'Create chatroom', new_room_path %>
        </div>
    </div>
    
    <div class="room-info">
        <% current_user.rooms.each do |room| %>
            <div class="room">
                <div class="room-name">
                    <%= link_to room.name, room_messages_path(room) %>
                </div>
            </div>
        <% end %>
    </div>
